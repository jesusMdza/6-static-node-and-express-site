extends layout.pug

block content 
  article.grid-container.portfolio-intro
    div

      h1 Portfolio

      p.lead.text-light
        | Welcome to my portfolio page. Here, you'll see several projects I've completed down below.
  article.grid-container.portfolio-index
    
    .grid-x.grid-margin-x.small-up-2.medium-up-2.large-up-3

      each val in projects
        .cell
          a(href=`/project/${val.id}`)
            img.thumbnail(src=`../static/images/${val.image_urls[0]}`)
            h5= `${val.project_name}`